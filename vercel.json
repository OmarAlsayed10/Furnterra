{
  "version": 2,
  "builds": [
    {
      "src": "furnterra-backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    },
    {
      "src": "furnterra-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/furnterra/browser"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "furnterra-backend/api/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json|woff|woff2|ttf|eot|mjs|txt))",
      "dest": "furnterra-frontend/dist/furnterra/browser/$1"
    },
    {
      "src": "/(.*)",
      "dest": "furnterra-frontend/dist/furnterra/browser/index.html"
    }
  ]
}