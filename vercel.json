{
  "version": 2,
  "builds": [
    {
      "src": "furnterra-backend/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "furnterra-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/furnterra/browser"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "furnterra-backend/src/main.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/furnterra-frontend/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json|woff|woff2|ttf|eot))",
      "dest": "/furnterra-frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/furnterra-frontend/index.html"
    }
  ]
}