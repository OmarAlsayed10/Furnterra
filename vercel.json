{
  "version": 2,
  "builds": [
    {
      "src": "furnterra-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/furnterra/browser" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "^/api(/.*)?$", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}