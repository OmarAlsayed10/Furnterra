{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "furnterra-backend/dist/**"
        ]
      }
    },
    {
      "src": "furnterra-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/furnterra/browser"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "furnterra-frontend/$1"
    }
  ]
}