{
  "version": 2,
  "builds": [
    {
      "src": "furnterra-backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "furnterra-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/furnterra/browser"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "furnterra-backend/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "furnterra-frontend/dist/furnterra/browser/$1"
    }
  ]
}